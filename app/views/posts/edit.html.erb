<h1>Editing post</h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
  	Categories<br />
	<% @all_categories.each do |category| %>
		<%= check_box_tag 'post[category_ids][]', category.id, @post.has_category?(category) %>
		<%=h category.title %><br />
	<% end %>
	<%#= hidden_field_tag 'post[category_ids][]', 0 %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>